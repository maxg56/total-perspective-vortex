# Flake8 configuration for scientific Python project
[flake8]
max-line-length = 100
max-complexity = 15

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by max-line-length)
    # E402: module level import not at top of file (needed for sys.path manipulation)
    E402,
    # D100, D101, D102, D103: Missing docstrings (we have most but not all)
    D100, D101, D102, D103,
    # D104: Missing docstring in public package
    D104,
    # D107: Missing docstring in __init__
    D107

# Exclude paths
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .tox

# Per-file ignores
per-file-ignores =
    # Tests can have longer lines for readability
    tests/*:E501,D
    # __init__ files don't need docstrings
    __init__.py:D104
    # Demo scripts can be more relaxed
    demo_plots.py:D,E501

# Docstring conventions
docstring-convention = numpy
